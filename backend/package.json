{
  "name": "backend-ponto-eli-pdv",
  "version": "1.0.0",
  "description": "Backend do projeto ponto eli pdv",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node build/src/server.js",
    "lint": "eslint ./src --ext .ts",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:reset": "npx -y tsc && npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
    "build": "npx -y tsc",
    "build-server-linux": "pkg . --targets node18-linux-x64 --output inno-setup/blue-pdv-server",
    "build-server-win": "pkg . --targets node18-win-x64 --output inno-setup/blue-pdv-server.exe",

    "build-db-backup": "pkg ./build/scripts/backup-db.js --targets node18-win-x64 --output scripts/run-backup-db.exe --config package.json",
    "build-db-migrations": "pkg ./build/scripts/migrations-db.js --targets node18-win-x64 --output scripts/run-migrations-db.exe --config package.json",
    "build-db-reset": "pkg ./build/scripts/reset-db.js --targets node18-win-x64 --output scripts/run-reset-db.exe --config package.json",
    "build-db-restore": "pkg ./build/scripts/restore-db.js --targets node18-win-x64 --output scripts/run-restore-db.exe --config package.json",
    "build-db-seeds": "pkg ./build/scripts/seeds-db.js --targets node18-win-x64 --output scripts/run-seeds-db.exe --config package.json",

    "build-db-scripts-win": "npm run build-db-backup && npm run build-db-migrations && npm run build-db-reset && npm run build-db-restore && npm run build-db-seeds",
    "build-db-scripts-linux": "pkg ./build/scripts/backup-db.js --targets node18-linux-x64 --output scripts/run-backup-db-linux --config package.json && pkg ./build/scripts/migrations-db.js --targets node18-linux-x64 --output scripts/run-migrations-db-linux --config package.json && pkg ./build/scripts/reset-db.js --targets node18-linux-x64 --output scripts/run-reset-db-linux --config package.json && pkg ./build/scripts/restore-db.js --targets node18-linux-x64 --output scripts/run-restore-db-linux --config package.json && pkg ./build/scripts/seeds-db.js --targets node18-linux-x64 --output scripts/run-seeds-db-linux --config package.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ElieltonRamos/project-ponto-v-pdv-free.git"
  },
  "bin": "build/src/server.js",
  "pkg": {
    "assets": [
      "build/src/database/migrations/**/*.js",
      "build/src/database/seeders/**/*.js"
    ],
    "scripts": [
      "build/**/*.js"
    ],
    "targets": [
      "node18-linux-x64",
      "node18-win-x64"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "homepage": "https://github.com/ElieltonRamos/project-ponto-v-pdv-free#readme",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^1.3.7",
    "express": "4.17.1",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.0",
    "mysqldump": "^3.2.0",
    "sequelize": "^6.37.7",
    "umzug": "^3.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "4.17.13",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "eslint": "^9.24.0",
    "eslint-config-trybe-backend": "^2.1.0",
    "eslint-plugin-sonarjs": "^3.0.2",
    "globals": "^16.0.0",
    "sequelize-cli": "^6.6.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1"
  }
}
